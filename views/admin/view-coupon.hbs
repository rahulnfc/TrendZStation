<div id="main-content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-5 col-md-8 col-sm-12">
                    <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth">
                            <i class="fa fa-arrow-left"></i></a> Coupon Management </h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin"><i class="icon-home"></i></a></li>
                        <li class="breadcrumb-item">Table</li>
                        <li class="breadcrumb-item active">Coupon details</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="header">
                        <h2>Coupon Details <small>view the coupon details</small> </h2>
                    </div>

                    <div class="container col-md-2 float-right">
                        <a href="/createCoupon" class="btn btn-success btn-lg btn-block">Create Coupon</a><br>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table id="myTable" class="table table-striped css-serial">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th style="font-weight: bolder;">Offer discount rate</th>
                                        <th style="font-weight: bolder;">Coupon</th>
                                        <th style="font-weight: bolder;">status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each coupons}}
                                    <tr>
                                        <td></td>
                                        <td>{{this.Offer}}%</td>
                                        <td>{{this.Coupon}}</td>
                                        <td> {{this.status}}</td>
                                        <td>
                                            <a href="/delete-coupon/{{this._id}}">
                                                <button class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Coupon}}')">Delete</button>
                                            </a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .css-serial {
        counter-reset: serial-number;
    }

    .css-serial td:first-child:before {
        counter-increment: serial-number;
        content: counter(serial-number);
    }
</style>

<script>
    $(document).ready(function () {
        $('#myTable').dataTable();
    });
</script>