<div id="main-content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-5 col-md-8 col-sm-12">
                    <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i
                                class="fa fa-arrow-left"></i></a> Offer Management </h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin"><i class="icon-home"></i></a></li>
                        <li class="breadcrumb-item">Table</li>
                        <li class="breadcrumb-item active">Offer details</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="header">
                        <h2>Offer Details <small>view the offer details</small> </h2>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table id="myTable" class="table table-striped css-serial">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th style="font-weight: bolder;">Product Name</th>
                                        <th style="font-weight: bolder;">Image</th>
                                        <th style="font-weight: bolder;">Category</th>
                                        <th style="font-weight: bolder;">Discount(%)</th>
                                        <th style="font-weight: bolder;">Valid From</th>
                                        <th style="font-weight: bolder;"> Valid To</th>
                                        <th style="font-weight: bolder;"> Actual Amount</th>
                                        <th style="font-weight: bolder;"> After Discount Amount</th>
                                        <th style="font-weight: bolder;"> Delete</th>
                                        {{!-- <th></th> --}}
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each data}}
                                    <tr>
                                        <td></td>
                                        <td>{{this.Name}}</td>
                                        <td><img style="width: 40px; height: 70px;"
                                                src="product-images/{{this._id}}1.jpg" alt=""></td>
                                        <td>{{this.Category}}</td>
                                        <td>{{this.Offer}}%</td>
                                        <td>{{this.ValidFrom}}</td>
                                        <td>{{this.ValidTo}}</td>
                                        <td>{{this.ActualPrice}}</td>
                                        <td>{{this.Price}}</td>
                                        <td><a href="/deleteOffer/{{this._id}}" class="btn btn-danger"
                                                onclick="return confirm('Are you want to delete {{this.Name}}')">Delete</a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .css-serial {
        counter-reset: serial-number;
    }

    .css-serial td:first-child:before {
        counter-increment: serial-number;
        content: counter(serial-number);
    }
</style>
<script>
    $(document).ready(function () {
        $('#myTable').dataTable();
    });
</script>