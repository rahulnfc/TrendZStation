
<div id="main-content">
        <div class="container-fluid">
            <div class="block-header">
                <div class="row">
                    <div class="col-lg-5 col-md-8 col-sm-12">                        
                        <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a> User Details</h2>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index-2.html"><i class="icon-home"></i></a></li>                            
                            <li class="breadcrumb-item">User Management</li>
                            <li class="breadcrumb-item active">view-user</li>
                        </ul>
                    </div>            
                </div>
            </div>
            
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="header">
                            <h2>User Details <small>Handle the user by blocking</small> </h2>                            
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table id="view-user" class="table css-serial table-bordered table-hover js-basic-example dataTable table-custom">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>Name</th>
                                            <th>Username</th>
                                            <th>Email</th>
                                            <th>Mobile</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>No</th>
                                            <th>Name</th>
                                            <th>Username</th>
                                            <th>Email</th>
                                            <th>Mobile</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {{#each users}}
                                            <td></td>
                                            <td>{{this.Name}}</td>
                                            <td>{{this.Username}}</td>
                                            <td>{{this.Email}}</td>
                                            <td>{{this.Mobile}}</td>
                                            <td>
                                                {{#if this.status}}
                                                <a href="/unblockUser/{{this._id}}" class="btn btn-primary">Un-Block</a>
                                                {{else}}
                                                    <a href="/blockUser/{{this._id}}" class="btn btn-danger">Block</a>
                                                {{/if}}
                                            </td>    
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

<script>
    $(document).ready( function () {
        $('#view-user').DataTable();
    } );
</script>

<style>
    .css-serial {
        counter-reset: serial-number;
        }

    .css-serial td:first-child:before {
    counter-increment: serial-number;
    content: counter(serial-number);
    }
</style>